{
  "cli": {
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "store",
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "autoIncrement": "true",
      "distribution": "store",
      "env": {
        "API_KEY": "@API_KEY"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "releaseStatus": "draft"
      }
    }
  }
}
